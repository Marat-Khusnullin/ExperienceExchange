<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Label">
        <item name="android:padding">@dimen/item_padding</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="Label.Accent">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/extra_large_text_size</item>
    </style>
    
    <style name="Input">
        <item name="android:lines">1</item>
        <item name="android:gravity">start</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:colorActivatedHighlight">@color/accent</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:minWidth">@dimen/minButtonWidth</item>
        <item name="android:minHeight">@dimen/minButtonHeight</item>
        <item name="android:background">@color/accent</item>
        <item name="android:textColor">@color/white_background</item>
        <item name="android:padding">@dimen/item_padding</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="Button.Flat">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
