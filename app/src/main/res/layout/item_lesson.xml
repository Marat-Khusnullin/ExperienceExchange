<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:orientation="vertical"
                                    android:layout_margin="@dimen/medium_margin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="@dimen/medium_padding"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.ruslanio.experienceexchange.utils.views.TypefaceTextView
                android:layout_width="wrap_content"
                style="@style/Label.Bold"
                android:layout_weight="1"
                android:id="@+id/tv_lesson_item_number"
                android:textSize="@dimen/large_text_size"
                android:text="@string/lesson_number"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/ibtn_lesson_item_close"
                android:src="@drawable/ic_close_grey"
                android:background="@color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <include layout="@layout/strip"/>

        <com.example.ruslanio.experienceexchange.utils.views.EntitledTextView
            style="@style/Label"
            android:id="@+id/tv_lesson_item_name"
            android:textSize="@dimen/extra_medium_text_size"
            app:title_text="@string/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</android.support.v7.widget.CardView>